version: "3"
services:
    glenmorangie_app:
        container_name: glenmorangie_app
        build:
            context: .
            dockerfile: Dockerfile
        volumes:
            - .:/var/www/html:cached
        ports:
            - "80:80"
        depends_on:
            - glenmorangie_db
            - glenmorangie_memcached
    glenmorangie_db:
        container_name: glenmorangie_db
        image: mysql:8.0
        ports:
            - "3306:3306"
        environment:
            MYSQL_ROOT_PASSWORD: root
            MYSQL_DATABASE: glenmorangie_db
            MYSQL_USER: glenmorangie
            MYSQL_PASSWORD: glenmorangie
        volumes:
            - ./data/:/var/lib/mysql
    glenmorangie_memcached:
        container_name: glenmorangie_memcached
        image: memcached:latest
        ports:
            - "11211:11211"
